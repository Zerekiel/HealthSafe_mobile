<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:text="@string/B_Connect"
        android:onClick="connection"
        android:layout_width="128dp"
        android:layout_height="47dp"
        android:id="@+id/Tconnexion" android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5" tools:ignore="OnClick"
        app:layout_constraintTop_toBottomOf="@+id/password"/>

    <ImageView
        android:layout_width="207dp"
        android:layout_height="221dp" app:srcCompat="@drawable/logohealthsafe"
        android:id="@+id/ILogo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.029"
        android:contentDescription="@string/CD_IHealth" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/identifiant" android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/ILogo" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/password" android:hint="@string/H_Identifier"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/identifiant"
        app:layout_constraintBottom_toTopOf="@+id/Tconnexion" android:hint="@string/H_Pass"/>

</androidx.constraintlayout.widget.ConstraintLayout>