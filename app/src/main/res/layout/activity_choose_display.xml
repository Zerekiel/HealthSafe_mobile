<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseDisplay" android:onClick="choosePortable"
    android:background="@android:color/background_light">

    <Button
        android:layout_width="158dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:onClick="deconnection"
        android:text="@string/B_Deconect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TName"
        app:layout_constraintVertical_bias="0.976" />
    <TextView
        android:text="@string/T_Nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:id="@+id/TName" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:layout_width="198dp"
        android:layout_height="140dp" app:srcCompat="@drawable/pc_bureau"
        android:id="@+id/IBComputer" android:layout_marginTop="116dp"
        app:layout_constraintTop_toBottomOf="@+id/TName"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:onClick="chooseComputer"
        android:contentDescription="@string/CD_BComp" />
    <TextView
        android:text="@string/T_Choose"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textSize="25sp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/IBComputer" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.457"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"/>
    <ImageButton
        android:layout_width="111dp"
        android:layout_height="171dp" app:srcCompat="@drawable/logo_tel"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/IBComputer" android:layout_marginEnd="8dp"
        android:layout_marginTop="128dp" app:layout_constraintTop_toBottomOf="@+id/TName"
        app:layout_constraintHorizontal_bias="0.882" android:onClick="choosePortable"
        android:contentDescription="@string/CD_BPhone" />
</androidx.constraintlayout.widget.ConstraintLayout>